{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/",
                "${workspaceFolder}/shallow-engine/",
                "${workspaceFolder}/sandbox/"
            ],
            "defines": [
                "DRIVER_SANDBOX=1"
            ],
            "macFrameworkPath": [
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
            ],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "clang-x64"
        }
    ],
    "version": 4
}